      <property name = "hibernate.connection.driver_class">
         com.mysql.jdbc.Driver
      </property>
      
      <!-- Assume students is the database name -->
      
      <property name = "hibernate.connection.url">
         jdbc:mysql://localhost/employee
      </property>
      
      <property name = "hibernate.connection.username">
         root
      </property>
   
      <property name = "hibernate.connection.password">
         Guna@1996
      </property>
     <mapping class="com.ideas2it.model.Employee"/>
     <mapping class="com.ideas2it.model.Project"/>
     <mapping class="com.ideas2it.model.EmployeeRoles"/>
     <mapping class="com.ideas2it.model.Role"/>
     <mapping class="com.ideas2it.model.EmployeeProject"/>
    </session-factory>  
</hibernate-configuration>  